<h3>Comments</h3>
<% @post.comments.each do |comment| %>
	<div class="well">
		<p><strong> <%= comment.username %></strong>: <%= comment.body%> 
		<%= link_to 'Delete', [comment.post, comment], 
		method: :delete, :class => 'btn btn-danger', 
		data: {conform: 'Are you sure?'} %></p>
	</div>

		
<%end%>